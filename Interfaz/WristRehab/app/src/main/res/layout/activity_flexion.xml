<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flexion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/background_flexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_flexion"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/Ufo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="350dp"
        android:scaleX="5"
        android:scaleY="5"
        android:src="@drawable/red_ufo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="100dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/asteroide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="550dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/asteroide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="600dp"
        android:layout_marginTop="200dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/asteroide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="820dp"
        android:layout_marginTop="428dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/asteroide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="1000dp"
        android:layout_marginTop="150dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/asteroide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="1200dp"
        android:layout_marginTop="550dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/asteroide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide7"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="1400dp"
        android:layout_marginTop="400dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/asteroide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/asteroide8"
        android:layout_width="150dp"
